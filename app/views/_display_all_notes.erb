<div class="holder" id="hello">
  <h1>Hello <%= current_user.name.split.first.capitalize %>!</h1>
  <%= erb :_gravatar %>
</div>

<% @notes.each do |note| %>
  <a href="/notes/<%= "#{note.id}" %>">
    <div id="note">
      <div id="header">
        <div id="header_left">
          <p class="title"><%= note.title %></p>
          <p class="timestamp"><%= note.created_at.strftime('%e %b %Y') %></p>
        </div>
        <div id="header_right">
          <p class="user_name"><%= User.find(note.user_id).name.split.first %></p>
        </div>
      </div>
      <p class="note_content" ><%= note.content %></p>
    </div>
  </a>
<% end %>
